Page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item {
  display: flex;
  padding: 20rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}

.item .meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 20rpx;
}

.item .title {
  margin-bottom: 10rpx;
}

.item .content {
  font-size: 32rpx;
}

.userInfo {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.icon {
  width: 100rpx;
  height: 100rpx;
}

.name {
  margin: 10rpx 0;
  font-size: 28rpx;
  justify-content: center;
}

.address {
  display: flex;
  flex-direction: raw;
  font-size: 32rpx;
}

.mapView {
  margin: 20rpx;
}

.map {
  width: 100%;
  height: 250rpx;
}

.openMapText {
  margin: 20rpx 0;
  text-decoration: underline;
  color: #06f;
}

.replyForm {
  display: flex;
  flex-direction: raw;
  padding: 5rpx;
}

.replyInput {
  border-right: #fff 0px solid;
  border-top: #fff 0px solid;
  border-left: #fff 0px solid;
  border-bottom: #080 1px solid;
  background-color: #fff;
  margin: 0 10rpx;
  width: 80%;
}

.replySendButton {
  text-align: center;
}
